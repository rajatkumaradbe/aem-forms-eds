                "sling:resourceType": "core/fd/components/form/checkboxgroup/v1/checkboxgroup",
                "fieldType": "checkbox-group",
                "jcr:title": "Are you human?",
                "enum": [
                  "0",
                  "1"
                ],
                "enumNames": [
                  "Item 1",
                  "Item 2"
                ],
                "orientation": "horizontal",
                "type": "string[]"
              },
              "email2": {
                "sling:resourceType": "core/fd/components/form/emailinput/v1/emailinput",
                "fieldType": "email",
